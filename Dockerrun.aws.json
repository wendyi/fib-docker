{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "fib-client",
      "image": "wendyi/fib-client",
      "hostname":"client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "fib-server",
      "image": "wendyi/fib-server",
      "hostname": "api",
      "essential":  false,
      "memory":  128
    },
    {
      "name": "fib-worker",
      "image": "wendyi/fib-worker",
      "essential":  false,
      "memory":  128
    },
    {
      "name": "fib-nginx",
      "image": "wendyi/fib-nginx",
      "essential":  true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["fib-client", "fib-server"],
      "memory":  128
    }
  ]
}
